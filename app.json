{
  "expo": {
    "name": "VahanHelp",
    "slug": "VahanHelp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "VahanHelp needs access to your camera to take photos of your car.",
        "NSPhotoLibraryUsageDescription": "VahanHelp needs access to your photo library to select car images."
      },
      "bundleIdentifier": "com.jassu1314.VahanHelp"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ff1ea5"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.RECORD_AUDIO"
      ],
      "package": "com.jassu1314.VahanHelp",
      "notification": {
        "icon": "./assets/icon.png",
        "color": "#ff1ea5"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-secure-store",
      [
        "expo-image-picker",
        {
          "photosPermission": "VahanHelp needs access to your photos to upload car images.",
          "cameraPermission": "VahanHelp needs access to your camera to take photos of your car."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/icon.png",
          "color": "#ff1ea5",
          "sounds": []
        }
      ]
    ]
  }
}
